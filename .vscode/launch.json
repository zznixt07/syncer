{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to nodemon --inspect",
            "port": 9229,
            "restart": true,
            "timeout": 30000,                   // give more time
            "trace": true,                      // logs more info in Debug Console → look for errors
            "skipFiles": ["<node_internals>/**"],
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/**/*.js"]
          },
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon + ts-node + debugger (launch)",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
              "nodemon",
              "--inspect",                          // or "--inspect-brk=9229" to pause immediately
              "--exec",
              "ts-node --transpile-only",           // adjust flags as needed
              "index.ts"                            // ← your entry file
            ],
            "skipFiles": [
              "<node_internals>/**",
              "**/node_modules/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "restart": true,                      // still useful if nodemon restarts later
            "envFile": "${workspaceFolder}/.env"
          },
        {
            "type": "node",
            "request": "launch",
            "name": "Run dist/index.js (debug compiled)",
            "program": "${workspaceFolder}/dist/index.js",
            "preLaunchTask": "npm: build",
            "outFiles": [
              "${workspaceFolder}/dist/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "skipFiles": [
              "<node_internals>/**",
              "**/node_modules/**"
            ],
            "sourceMaps": true,
            "console": "integratedTerminal"
          }
    ]
}